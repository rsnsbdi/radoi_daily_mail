<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <com.softnep.radiodailymail.UIutils.MyTextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="TitleTitleTTitleTitle"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/entertainmentnews_title"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"/>


            <com.softnep.radiodailymail.UIutils.MyTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minWidth="50sp"
                android:id="@+id/entertainmentnews_time"
                android:text="30m"
                android:textSize="16sp"
                android:textColor="@color/light_grey"
                android:gravity="end"
                android:textStyle="normal"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/entertainmentnews_image"
            android:layout_below="@+id/linear"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="3sp"
            android:src="@mipmap/ic_launcher"/>


        <com.softnep.radiodailymail.UIutils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/entertainmentnews_image"
            android:layout_toEndOf="@+id/entertainmentnews_image"
            android:layout_below="@+id/linear"
            android:textSize="18dp"
            android:text="Short Description"
            android:id="@+id/entertainmentnews_short_description"
            android:lines="4"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="4sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>